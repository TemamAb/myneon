# AION Architect - Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Required for Gasless Mode
PIMLICO_API_KEY=your_pimlico_api_key_here
PIMLICO_PROJECT_ID=your_pimlico_project_id_here
PIMLICO_CHAIN_ID=1  # 1: Ethereum, 137: Polygon, 42161: Arbitrum

# Optional but Recommended
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_walletconnect_project_id_here
ALCHEMY_API_KEY=your_alchemy_api_key_here
INFURA_PROJECT_ID=your_infura_project_id_here

# Feature Flags
ENABLE_GASLESS_MODE=true
ENABLE_MEV_PROTECTION=true
ENABLE_MULTI_CHAIN=true
ENABLE_REAL_TIME_ANALYTICS=true

# Server Configuration
NODE_ENV=production
PORT=10000

# To get Pimlico API key:
# 1. Visit https://pimlico.io
# 2. Sign up for an account
# 3. Create a new project
# 4. Copy your API key and project ID
